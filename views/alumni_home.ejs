<!--New Nav bar-->
<nav class="bg-gray-800">
    <div class="mx-auto max-w-full px-0 sm:px-0 lg:px-0"> <!-- Adjusted here -->
        <div class="relative flex h-16 items-center justify-between">
            <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                <button type="button"
                    class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
                    aria-controls="mobile-menu" aria-expanded="false">
                    <span class="absolute -inset-0.5"></span>
                    <span class="sr-only">Open main menu</span>
                    <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                        aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                    <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                        aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
                <div class="flex flex-shrink-0 items-center">
                    <a href="/"> <img class="h-10 w-auto"
                        src="assets/logo1.png"
                        alt="College logo"> </a>
                </div>
                <div class="hidden sm:ml-6 sm:block">
                    <div class="flex space-x-4">
                        <a href="/alumni_profile" class="rounded-md bg-gray-900 px-3 py-2 text-sm font-medium text-white"
                            aria-current="page">Profile</a>
                        <a href="/alumni_all"
                            class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Alumni</a>
                        <a href="/alumni_companies"
                            class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Companies</a>
                        <a href="/log_out"
                            class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Log out</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>

    <div class="sm:hidden" id="mobile-menu">
        <div class="space-y-1 px-2 pb-3 pt-2">
            <a href="/alumni_profile" class="block rounded-md bg-gray-900 px-3 py-2 text-base font-medium text-white"
                aria-current="page">Profile </a>
            <a href="/alumni_all"
                class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Alumni</a>
            <a href="/alumni_companies"
                class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Companies</a>
            <a href="/log_out"
                class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Log out</a>
        </div>
    </div>
</nav>

<!-- Script for mobile menu -->
<script>
    const menuButton = document.querySelector('[aria-controls="mobile-menu"]');
    const mobileMenu = document.getElementById('mobile-menu');

    menuButton.addEventListener('click', () => {
        const expanded = menuButton.getAttribute('aria-expanded') === 'true' || false;
        menuButton.setAttribute('aria-expanded', !expanded);
        mobileMenu.classList.toggle('hidden');
    });
</script>

    <% if(locals.profile){%>
        <div class="profile-container">
            <div class="profile-details">
                <p><strong>Name:</strong> <%= profile.name %></p>
                <p><strong>Email:</strong> <%= profile.email %></p>
                <p><strong>Company:</strong> <%= profile.company_name %></p>
                <p><strong>CTC:</strong> <%= profile.ctc %></p>
                <p><strong>Location:</strong> <%= profile.location %></p>
                <p><strong>Position:</strong> <%= profile.position %></p>
                <p><strong>Field:</strong> <%= profile.area %></p>
                <p><strong>Working Tenure:</strong> <%= profile.working_tenure %></p>
            </div>
            <form action="/update_alumni" method="GET">
                <button type="submit" class="update-button">Update Profile</button>
            </form>
        </div>
    <%}%>
    
    
    <%if(locals.alumni){
        for(var i=0; i<alumni.length; i++){%>
            <div class="alumni-card">
                <p><strong>Name:</strong> <%= alumni[i].name %></p>
                <p><strong>Email:</strong> <%= alumni[i].email %></p>
                <p><strong>Company:</strong> <%= alumni[i].company_name %></p>
                <p><strong>Position:</strong> <%= alumni[i].position %></p>
                <p><strong>Role:</strong> <%= alumni[i].area %></p>
            </div>
    <%}}%>
    


    <%if(locals.company){
    for(var i=0; i<company.length; i++){%>
        <div class="company-card">
            <p><strong>Name:</strong> <%= company[i].name %></p>
            <p><strong>Email:</strong> <%= company[i].email %></p>
        </div>
<%}}%>


    <%if(locals.z){%>
    <form action="/update_alumni" method="POST" class="alumni-form">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= alum.name %>" required>
        </div>
        
        <div class="form-group">
            <label for="company_name">Company Name:</label>
            <input type="text" id="company_name" name="company_name" value="<%= alum.company_name %>" required>
        </div>
        
        <div class="form-group">
            <label for="ctc">CTC:</label>
            <input type="number" step="0.01" id="ctc" name="ctc" value="<%= alum.ctc %>" required>
        </div>
        
        <div class="form-group">
            <label for="area">Area:</label>
            <input type="text" id="area" name="area" value="<%= alum.area %>" required>
        </div>
        
        <div class="form-group">
            <label for="position">Position:</label>
            <input type="text" id="position" name="position" value="<%= alum.position %>" required>
        </div>
        
        <div class="form-group">
            <label for="location">Location:</label>
            <input type="text" id="location" name="location" value="<%= alum.location %>" required>
        </div>
        
        <div class="form-group">
            <label for="working_tenure">Working Tenure:</label>
            <input type="text" id="working_tenure" name="working_tenure" value="<%= alum.working_tenure %>" required>
        </div>
        
        <div class="form-group">
            <button type="submit" class="submit-button">Update</button>
        </div>
    </form>
<%}%>



</body>
</html>